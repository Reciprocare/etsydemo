<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url(:medium) %>
        <div class="caption">
          <h3 class="center"><%= listing.name %></h3>
          <h4 class="center"><%= number_to_currency(listing.price) %></`h4>
          <%= link_to 'Show', listing_path(id: listing.id) %>
          <%= link_to 'Edit', edit_listing_path(id: listing.id) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path %>
